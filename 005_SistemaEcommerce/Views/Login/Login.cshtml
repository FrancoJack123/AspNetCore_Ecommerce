@{
}
<div class ="d-flex justify-content-center align-items-center" style="margin-top: 80px;">
    <div class="" style="width: 700px;">

        <h3 class="text-center h2 mb-4"><strong>Inicio Sesion</strong></h3>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="email"> Email:  </label>
                <input type="email" class="form-control" id="email" name="correo" placeholder="Ingrese su email" required autocomplete="off">

            </div>

            <div class="form-group mb-3">
                <label for="pwd"> Contraseña:</label>
                <input type="password" class="form-control" id="password" name="contrasenia" placeholder="Ingrese su contraseña" required>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-dark"> <span class="glyphicon glyphicon-ok"></span> Ingresar</button>
            </div>
        </form>
        @if(TempData["message"] != null){
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@TempData["message"] !!</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @Html.ActionLink("Si aún no tiene cuenta aqui puede registrarse","Register", "Login", null, new { @class="link-underline-light text-dark"})
    </div>
</div>