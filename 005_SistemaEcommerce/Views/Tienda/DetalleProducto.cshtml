@model _005_SistemaEcommerce.Models.Producto

@{
    var session = ViewContext.HttpContext.Session;
    ViewData["Title"] = "DetalleProducto";
}

<h1 class="my-4"><small>Producto</small></h1>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">@Html.ActionLink("Ecommerce", "index", "Tienda")</li>
    <li class="breadcrumb-item active">Producto</li>
</ol>

<div class="d-flex flex-column justify-content-center">
    <!-- Blog Post -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
                <div class="" style="flex: 1;">
                    <a href="#">
                        <img class="img-fluid rounded" src="@Url.Content("~/Fotos/" + Model.foto)" width="480" />
                    </a>
                </div>
                <div class="" style="flex: 1;">
                    <form asp-action="AgregarCarrito" method="get">
                        <h2 class="card-title"><strong>@Html.DisplayFor(model => model.nombreProduc)</strong></h2>

                        <ul class="list-group mt-4">
                            <li class="list-group-item">
                                <h6><strong>Precio</strong></h6>
                                <span>$ @Html.DisplayFor(model => model.precio) USD</span>
                            </li>
                            <li class="list-group-item">
                                <h6><strong>Categoria</strong></h6>
                                <span>
                                    @Html.DisplayFor(model => model.categoriaName)
                                </span>
                            </li>
                            <li class="list-group-item">
                                <h6><strong>Descripción</strong></h6>
                                <span>
                                    @Html.DisplayFor(model => model.descripcionProdu)
                                </span>
                            </li>
                            @if (session.GetString("idCliente") != null)
                            {
                                <li class="list-group-item">
                                    <div class="row my-3">
                                        <h6 for="inputEmail3" class="col-sm-3 col-form-label"><strong>Cantidad</strong></h6>
                                        <div class="col-sm-9">
                                            <input type="hidden" name="productoId" value="@Model.productoId">
                                            <input class="form-control" type="number" id="cantidad" name="cantidad" value="1" />
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>

                        <div class="mt-4">
                            @Html.ActionLink("Volver", "Index", null, null, new { @class="btn btn-danger"})
                            @if (session.GetString("idCliente") != null)
                            {
                                <button type="submit" class="btn btn-dark">Añadir</button>
                            }
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
